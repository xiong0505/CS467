<h1>Edit/Delete User</h1>

{{#if results}}
<table id="user">
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Company</th>
	</tr>

  {{#each results}}
  	<tr>
    	<input type="hidden" value="{{this.id}}">
  		<td>{{this.fname}}</td>
  		<td>{{this.lname}}</td>
  		<td>{{this.email}}</td>
  		<td>{{this.company}}</td>
  		<td><input type="button" value="Delete" onclick="deleteRow('user', this)"></td>
  		<td><input type="button" value="Edit" onclick="editRow('user', this)"></td>
	</tr>

  {{/each}}
  
</table>
{{/if}}

<script src="adminScript.js"></script>
